{
  "root": {
    "tag": "div",
    "layout": { "size": { "w": "full", "h": "full" } },
    "flex": { "items": "center", "justify": "center" },
    "bg": "neutral-950",
    "children": [
      {
        "card": {
          "tag": "div",
          "hidden": true,
          "flex": { "dir": "col", "gap": 2 },
          "pad": { "x": 6, "y": 3 },
          "border": { "w": 2, "color": "blue-500" },
          "rounded": "xl",
          "text": { "size": "lg", "color": "white" },
          "classExtra": ["cursor-pointer"],
          "children": [
            {
              "button": {
                "tag": "button",
                "bg": "neutral-700",
                "text": { "color": "amber-200" },
                "classExtra": ["hover:bg-neutral-800"],
                "children": ["Hover me"]
              }
            },
            {
              "icon": {
                "tag": "image",
                "layout": { "size": { "w": { "tw": 16 }, "h": { "tw": 16 } } },
                "src": "assets/sprite.png"
              }
            },
            {
              "row": {
                "tag": "div",
                "flex": { "items": "center", "gap": 3 },
                "children": [
                  {
                    "track": {
                      "tag": "div",
                      "bg": "red-500",
                      "border": { "w": 2, "color": "black" },
                      "rounded": "full",
                      "layout": { "size": { "w": { "tw": 64 }, "h": { "tw": 6 } } },
                      "classExtra": ["relative"],
                      "children": [
                        {
                          "fill": {
                            "tag": "div",
                            "layout": { "size": { "w": "full", "h": "full" } },
                            "bg": "green-500",
                            "rounded": "full",
                            "classExtra": ["transition-all", "duration-300"]
                          }
                        },
                        {
                          "label": {
                            "tag": "p",
                            "layout": {
                              "abs": true,
                              "anchor": "center",
                              "inset": { "left": { "pct": 0.5 }, "top": { "pct": 0.5 } }
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "StartMenu": {
          "tag": "div",
          "layout": {
            "abs": true,
            "anchor": "center",
            "inset": { "left": { "pct": 0.5 }, "top": { "pct": 0.5 } },
            "size": { "w": 420, "h": 320 }
          },
          "flex": { "dir": "col", "items": "center" },
          "bg": "neutral-950",
          "border": { "color": "neutral-700" },
          "rounded": "xl",
          "children": [
            {
              "Subtitle": {
                "tag": "p",
                "text": { "size": "lg", "color": "neutral-300" },
                "margin": { "t": 2 },
                "children": ["Start Menu"]
              }
            },
            {
              "StartButton": {
                "tag": "button",
                "layout": { "size": { "w": "full", "h": { "tw": 12 } } },
                "margin": { "t": 8 },
                "bg": "neutral-800",
                "rounded": "md",
                "classExtra": ["hover:bg-neutral-700"],
                "children": ["Start"]
              }
            },
            {
              "OptionsButton": {
                "tag": "button",
                "layout": { "size": { "w": "full", "h": { "tw": 12 } } },
                "margin": { "t": 4 },
                "bg": "neutral-800",
                "rounded": "md",
                "classExtra": ["hover:bg-neutral-700"],
                "children": ["Options"]
              }
            },
            {
              "QuitButton": {
                "tag": "button",
                "layout": { "size": { "w": "full", "h": { "tw": 12 } } },
                "margin": { "t": 4 },
                "bg": "neutral-800",
                "rounded": "md",
                "classExtra": ["hover:bg-neutral-700"],
                "children": ["Quit"]
              }
            }
          ]
        }
      }
    ]
  }
}
