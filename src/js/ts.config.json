{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./**/*.ts",
        "./types/**/*.d.ts"
    ]
}
